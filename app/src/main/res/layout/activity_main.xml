<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.example.acer.avance_dental.MainActivity">
<ImageView
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="fitStart"
    android:src="@drawable/contact"/>
    <RelativeLayout
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <!--<android.support.v7.widget.CardView-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="0dp"-->

      <!--android:layout_weight="0.17">-->
      <LinearLayout
          android:layout_width="match_parent"
          android:background="#488aff"
          android:layout_weight="0.17"
          android:layout_height="0dp">
       <ImageView
           android:layout_width="0dp"
           android:layout_weight="0.2"
           android:id="@+id/contact_back"
           android:layout_height="20dp"
           android:src="@drawable/leftarrow"
           android:layout_gravity="center"
           />
       <TextView
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="Contact us"
           android:textColor="#fff"
           android:textStyle="bold"
           android:textSize="18dp"
           android:layout_gravity="center_vertical"/>
      </LinearLayout>
  <!--</android.support.v7.widget.CardView>-->
<ImageView
    android:layout_width="100dp"
    android:layout_height="0dp"
    android:layout_weight="0.4"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
       >
      <android.support.v7.widget.CardView
          android:layout_width="0dp"
          android:layout_marginLeft="20dp"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:layout_height="40dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="vertical"
              android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:layout_gravity="center_vertical"
    android:paddingLeft="10dp"

    android:textColor="#488aff"
    android:text="Call us"/>
              <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:layout_gravity="center_vertical"
    android:paddingLeft="10dp"

    android:textColor="#488aff"
    android:text="9876656598"/>
          </LinearLayout>
      </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:textColor="#488aff"
                android:layout_gravity="center_vertical"
                android:text="Mail us"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:textColor="#488aff"
                android:id="@+id/setemail"
                android:layout_gravity="center_vertical"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="5dp"
    android:layout_weight="0.2"
    android:textColor="#a4a4a4"
    android:text="Send your message"
    android:paddingLeft="20dp"
    android:textSize="15dp"
    android:gravity="center_vertical"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="Fulll Name"
            android:textSize="12dp"
            android:textColor="#a4a4a4"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
         android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:hint="Name"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="Contact Email"
            android:textColor="#a4a4a4"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Email"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="0.2"
            android:text="Your message"
            android:textSize="12dp"
            android:textColor="#a4a4a4"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:hint="Message"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="send message"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/nextActivity"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buutonshape"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>

    </RelativeLayout>

</RelativeLayout>