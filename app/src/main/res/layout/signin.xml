<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:onClick="hideKeyBoardMethod"
    android:background="#fff"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/sign_frame">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:hint="Phone Number"
            android:maxLength="10"
            android:textSize="15dp"
            android:background="#e6e6e6"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:paddingLeft="15dp"
            android:background="#e6e6e6"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:textColor="#fff"
            android:textSize="15dp"
            android:id="@+id/singin"
            android:text="Sign in"
            android:background="@drawable/buutonshape"
            android:layout_marginTop="15dp"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:layout_height="40dp" />

        <Button
            android:textColor="#fff"
            android:textSize="15dp"
            android:id="@+id/googlelogin"

            android:background="@drawable/googlebtn"
            android:layout_marginTop="15dp"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:layout_height="40dp" />

        <ImageView
            android:textColor="#fff"
            android:textSize="15dp"
            android:id="@+id/faclogin"
            android:src="@drawable/facebook_btn"
            android:layout_marginTop="15dp"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:text="New user?"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#488aff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button

                    android:textColor="#fff"
                    android:text="Register Now"
                    android:background="@drawable/buutonshape"
                    android:textAllCaps="true"
                    android:id="@+id/availability"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>